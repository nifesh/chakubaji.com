---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main class="imgbox">
      <img src="main_img.jpg" alt="photo" class="center-fit">
	</main>
</Layout>

<style>
        * {
            margin: 0;
            padding: 0;
        }
        .imgbox {
            display: grid;
            height: 100%;
        }
        .center-fit {
            max-width: 100%;
            max-height: 100%;
            margin: auto;
        }
    </style>